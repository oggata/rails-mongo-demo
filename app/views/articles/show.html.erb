</div>



 <div class="comment-add">
    <%= form_with(model: @comment, local: true) do |form| %>
      <div class="field">
        <%= form.label :comment %>
          <%= form.text_field :comment, id: :comment_comment %>
      </div>
      <div class="field">
        <%= form.label :contributor %>
          <%= form.number_field :contributor, id: :comment_contributor %>
      </div>
      <div class="field">
        <%= form.label :score %>
          <%= form.number_field :score, id: :comment_score %>
      </div>

      <%= hidden_field :comment, :article_id %>
      <%= hidden_field :comment, :article_url %>

      <div class="actions">
        <%= form.submit %>
      </div>
      <% end %>
  </div>


