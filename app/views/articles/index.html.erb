<% @todays_articles.each do |article| %>
<div class="media">
  <a href="/articles/<%= article['id'] %>" class="media-left">
    <img src=<%= article['thumbnail_url'] %> class="img-rounded" width="150">
  </a>
  <div class="media-body">
    <h3 class="media-heading">
      <a href="/articles/<%= article['id'] %>"><%= article['title_jp'] %></a>
    </h3>
    <%= article['body_jp'] %>
  </div>
</div>
<% end %>

<div class="text-center">
  <ul class="pagination pagination-lg">
    <li class="disabled"><span><<</span></li>
    <li><a href="/articles?page=<%= @current_page_num.to_i - 2 %>"><%= @current_page_num.to_i - 2 %></a></li>
