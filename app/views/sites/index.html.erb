<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Url</th>
      <th>Target path</th>
      <th>Category name</th>
      <th>tag1</th>
      <th>tag2</th>
      <th>tag3</th>
      <th>tag4</th>
      <th>tag5</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.title %></td>
        <td><%= site.description %></td>
        <td><%= site.url %></td>
        <td><%= site.target_path %></td>
        <td><%= site.category_name %></td>
        <td><%= site.tag1 %></td>
        <td><%= site.tag2 %></td>
        <td><%= site.tag3 %></td>
        <td><%= site.tag4 %></td>
        <td><%= site.tag5 %></td>

        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

